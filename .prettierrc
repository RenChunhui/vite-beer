{
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "bracketSpacing": true,
  "bracketSameLine": true,
  "arrowParens": "always",
  "overrides": [
    {
      "files": ["Makefile", "**.mk"],
      "options": {
        "tabWidth": 4,
        "useTabs": true
      }
    },
    {
      "files": ".*rc",
      "options": {
        "parser": "json"
      }
    }
  ]
}
